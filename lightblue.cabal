  default-language:  Haskell2010

executable lightblue
  hs-source-dirs:    app
  main-is:           lightblueMain.hs
  build-depends:     base >= 4.5, containers >= 0.4, time >= 1.4, text >= 1.2, optparse-applicative >= 0.13, semigroups >= 0.16, lightblue >= 0.2
  default-language:  Haskell2010

source-repository head
  type:           git
  location:       https://bitbucket.org/DaisukeBekki/lightblue

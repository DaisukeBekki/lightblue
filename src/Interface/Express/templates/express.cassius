.toast.fade-out
  opacity: 0

/* Near-button toast (popover style) */
.toast-popover
  position: absolute
  background: rgba(0,0,0,0.9)
  color: #fff
  padding: 6px 10px
  border-radius: 6px
  font-size: 0.9rem
  line-height: 1.3
  box-shadow: 0 6px 16px rgba(0,0,0,0.25)
  z-index: 4000
  opacity: 1
  transition: opacity .2s ease
  pointer-events: none

.toast-popover.fade-out
  opacity: 0

.toast-popover:after
  content: ""
  position: absolute
  left: 50%
  transform: translateX(-50%)
  bottom: -6px
  border-left: 6px solid transparent
  border-right: 6px solid transparent
  border-top: 6px solid rgba(0,0,0,0.9)

/* No speech-bubble arrow: make it plain rectangle */
.toast-popover:after
  display: none
